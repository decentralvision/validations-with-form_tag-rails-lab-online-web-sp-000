<h2>Editing "<%= @author.title %>"</h2>
<%= form_tag author_path(@author), method: "patch" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>

  </div>

  <div class="field">
    <%= label_tag "content", "Content" %>
    <br />
    <%= text_area_tag "content", @author.content %>
  </div>
  <%= submit_tag "Update" %>
<% end %>
